<div class="row justify-content-md-center">
  <div class="col-md-6">
    <form class="" action="/results" method="post">
      <h1>Book a Train:</h1>
      <div class="form-group">
        <label for="city_start_id">Select a Start City</label>
        <select class="form-control" name='city_start_id' type='text'>
          <% @cities.each() do |city| %>
            <option value="<%= city.id %>"> <%= city.name %> </option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <label for="city_end_id">Select an End City</label>
        <select class="form-control" name='city_end_id' type='text'>
          <% @cities.each() do |city| %>
            <option value="<%= city.id %>"> <%= city.name %> </option>
          <% end %>
        </select>
      </div>
      <button type="submit" class= 'btn btn-success btn-block'>Find a trip</button>
    </form>
  </div>
</div><br>
