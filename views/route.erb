<div class="row justify-content-md-center">
  <div class="col-md-6">
    <div class="alert alert-success">
      <h1>ADMIN VIEW</h1>
    </div>
  </div>
</div>

<div class="row justify-content-md-center">
  <div class="col-md-6">
    <h1>City Start: <%= City.find(@route.city_start_id).name %>, City End: <%= City.find(@route.city_end_id).name %>, Train: <%= Train.find(@route.train_id).name %>, ID: <%= @route.id %></h1>
    <form class="" action="/route/update/<%= @route.id %>" method="post">
      <input name="_method" type="hidden" value="patch">
      <div class="form-group">
        <label for="city_start_id">Select a Start City</label>
        <select class="form-control" name='city_start_id' type='text'>
          <% @cities.each() do |city| %>
            <option value="<%= city.id %>"> <%= city.name %> </option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <label for="city_end_id">Select an End City</label>
        <select class="form-control" name='city_end_id' type='text'>
          <% @cities.each() do |city| %>
            <option value="<%= city.id %>"> <%= city.name %> </option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <label for="train_id">Select a Train</label>
        <select class="form-control" name='train_id' type='text'>
          <% @trains.each() do |train| %>
            <option value="<%= train.id %>"> <%= train.name %> </option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <label for "time">Select a time</label>
        <input class='form-control' type="datetime-local" name="time">
      </div>
      <button type="submit" class= 'btn btn-success btn-block'>Update Route</button>
      <a href="/admin"<button class= 'btn btn-block btn-info'>Go Back</button></a>
    </form>
  </div>
</div>
